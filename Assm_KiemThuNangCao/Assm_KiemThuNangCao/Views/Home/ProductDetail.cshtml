@model Product

<div class="product-detail-container">

    <div class="product-detail-left">
        <img src="~/Img/@Model.ImageUrl" class="product-detail-img" asp-append-version="true" />
    </div>

    <div class="product-detail-right">
        <h2>@Model.ProductName</h2>

        <p><strong>Mô tả:</strong> @Model.Description</p>
        <p><strong>Màu sắc:</strong> @Model.Color</p>
        <p><strong>Kích thước:</strong> @Model.Size</p>
        <p><strong>Còn lại:</strong> @Model.Quantity sản phẩm</p>

        <p class="product-price">
            Giá: @Model.Price.ToString("#,###") VNĐ
        </p>

<form asp-controller="Cart" asp-action="Buy" method="get">
    <input type="hidden" name="id" value="@Model.ProductID" />
    <button type="submit" class="btn-buy">Thêm vào giỏ hàng</button>
</form>
<h2 class="related-title">Có thể bạn sẽ thích</h2>

<div class="related-grid">
    @foreach (var p in ViewBag.RelatedProducts)
    {
        <div class="related-card">
        <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@p.ProductID"
               class="related-name"><img src="~/Img/@p.ImageUrl" class="related-img" asp-append-version="true" /></a>

            <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@p.ProductID"
               class="related-name">@p.ProductName</a>

            <p class="related-price">@p.Price.ToString("N0") VND</p>
        </div>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
    TempData["Success"] = null; 
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
    </div>

</div>
<style>
.product-detail-container {
    display: flex;
    width: 90%;
    margin: 30px auto;
    gap: 30px;
}

.product-detail-left {
    width: 40%;
}

.product-detail-img {
    width: 526px;
    height: 526px;
    border-radius: 10px;
    object-fit: cover;
}

.product-detail-right {
    width: 60%;
    font-size: 18px;
}

.product-price {
    font-size: 22px;
    color: red;
    font-weight: bold;
}

.btn-buy {
    width: 250px;
    display: inline-block;
    margin-top: 15px;
    padding: 12px 25px;
    background-color: orange;
    color: whitesmoke;
    font-size: 18px;
    border-radius: 8px;
    text-decoration: none;
    text-align: center;
}

.btn-buy:hover {
    background-color: darkorange;
}
.alert {
    width: 90%;
    margin: 10px auto;
    padding: 12px;
    border-radius: 6px;
    text-align: center;
}

.alert-success { background: #c8f7c5; color: #2d7a2d; }
.alert-danger  { background: #ffd0d0; color: #a00000; }
.related-title {
    margin-top: 40px;
    font-size: 24px;
    font-weight: bold;
}

.related-grid {
    margin-top: 15px;
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 sản phẩm mỗi hàng */
    gap: 20px;
}

.related-card {
    background: white;
    border-radius: 8px;
    padding: 10px;
    text-align: center;
    box-shadow: 0 2px 7px rgba(0,0,0,0.1);
    transition: 0.3s;
}

.related-card:hover {
    transform: translateY(-4px);
}

.related-img {
    width: 100%;
    height: 150px;
    object-fit: contain;
}

.related-name {
    color: #333;
    font-weight: bold;
    display: block;
    margin: 8px 0;
    text-decoration: none;
}

.related-price {
    color: #f36f21;
    font-weight: bold;
    margin-bottom: 10px;
}
</style>