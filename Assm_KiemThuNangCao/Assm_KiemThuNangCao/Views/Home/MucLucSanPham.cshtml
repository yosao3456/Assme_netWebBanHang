
@{
    ViewData["Title"] = "TimSanPhamTheoMucLuc";
}
<style>
    .product-container {
        max-width: 1200px;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .product-item {
        display: flex;
        gap: 20px;
        background: white;
        padding: 15px;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .product-img img {
        width: 180px;
        height: 180px;
        object-fit: contain;
        border-radius: 8px;
        background: #fafafa;
    }

    .product-info {
        flex: 1;
    }

        .product-info h3 {
            margin-bottom: 8px;
        }

        .product-info p {
            margin: 4px 0;
        }

    .price {
        color: red;
        font-weight: bold;
        font-size: 18px;
        margin-top: 6px;
    }

    .btn-buy {
        margin-top: 10px;
        background: #ff5722;
        color: white;
        border: none;
        padding: 10px 18px;
        font-size: 15px;
        border-radius: 6px;
        cursor: pointer;
    }

        .btn-buy:hover {
            background: #e64a19;
        }
</style>
@model List<Product>

<h2 style="margin: 20px 0;">@ViewBag.CategoryName</h2>

<div class="product-container">

    @foreach (var p in Model)
    {
        <div class="product-item">

            <div class="product-img">
                <img src="~/img/products/@p.ImageUrl" asp-append-version="true" />
            </div>

            <div class="product-info">
                <h3>@p.ProductName</h3>

                <p><strong>Mô tả:</strong> @p.Description</p>
                <p><strong>Màu sắc:</strong> @p.Color</p>
                <p><strong>Kích thước:</strong> @p.Size</p>

                <p class="price">Giá: @p.Price.ToString("N0") VND</p>

                <button class="btn-buy">Mua ngay</button>
            </div>

        </div>
    }

</div>