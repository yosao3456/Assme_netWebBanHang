    ViewData["Title"] = "ﾄ斉ハg nh蘯ｭp";
}

<div class="auth-container">
    <div class="auth-box">
        <h2>ﾄ斉ハg nh蘯ｭp</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error-box">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">

            <div class="input-group">
                <label>Email</label>
                <input name="email" placeholder="Nh蘯ｭp email..." />
            </div>

            <div class="input-group">
                <label>M蘯ｭt kh蘯ｩu</label>
                <input type="password" name="password" placeholder="Nh蘯ｭp m蘯ｭt kh蘯ｩu..." />
            </div>

            <button type="submit" class="submit-btn">ﾄ斉ハg nh蘯ｭp</button>
        </form>

        <div class="divider">Ho蘯ｷc</div>

        <button type="button" class="google-btn" onclick="googleNotice()">
            <img src="https://www.svgrepo.com/show/355037/google.svg" />
